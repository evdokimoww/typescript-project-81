{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "checkJs": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "**/*",
  ],
}
